@model Estapar.Application.CarroManobristaDTO

@{
    ViewData["Title"] = "Editar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Editar</h1>

<h4>Responsável por Manobrar</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="IdManobrista" class="control-label">Manobrista</label>
                <select asp-for="IdManobrista" class="form-control" asp-items="ViewBag.IdManobrista"></select>
                <span asp-validation-for="IdManobrista" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdCarro" class="control-label">Carro</label>
                <select asp-for="IdCarro" class="form-control" asp-items="ViewBag.IdCarro"></select>
                <span asp-validation-for="IdCarro" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

<div>
    <span class="text-danger">@TempData["Message"]</span>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
